{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "noEmitHelpers": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["./src/*.d.ts", "./src/*.test.ts"],
  "ts-node": {
    "esm": true,
    "swc": true,
    "transpileOnly": true
  }
}
